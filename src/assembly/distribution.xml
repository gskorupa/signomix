    <assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${basedir}/ext-lib</directory>
            <includes>
                <include>*/**</include>
            </includes>
            <excludes>
            </excludes>
        </fileSet>
        <!--
<fileSet>
    <directory>${basedir}/src/main/webapp/blog/public</directory>
    <outputDirectory>www/blog</outputDirectory>
    <includes>
        <include>*/**</include>
    </includes>
    <excludes>
    </excludes>
</fileSet>
        -->
        <fileSet>
            <directory>${basedir}/src/main/www</directory>
            <outputDirectory>www</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
            <excludes>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>settings.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/runtime</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>run.sh</include>
                <include>run-debug.sh</include>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>README.md</source>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>LICENSE</source>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>CODE_OF_CONDUCT.md</source>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/${artifactId}.jar</source>
            <outputDirectory></outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>
